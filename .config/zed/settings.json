    //   "jsxSingleQuote": true,
    //   "semi": false,
    //   "singleQuote": true,
    //   "tabWidth": 2,
    //   "trailingComma": "none"
    // },
    // File Scan Exclusions, hide on the file explorer and search
    "file_scan_exclusions": [
        "**/.git",
        "**/.svn",
        "**/.hg",
        "**/CVS",
        "**/.DS_Store",
        "**/Thumbs.db",
        "**/.classpath",
        "**/.settings",
        "**/.next",
        "**/node_modules"
    ],
    "use_autoclose": true,
    "auto_install_extensions": {
        "html": true
    },
    "ensure_final_newline_on_save": false,
    "show_inline_completions": true,
    "project_panel": {
        "dock": "right",
        "git_status": true,
        "auto_fold_dirs": true,
        "auto_reveal_entries": false,
        "indent_guides": {
            "show": "always"
        }
    },
    "outline_panel": {
        "dock": "right",
        "button": false
    },
    "collaboration_panel": {
        "dock": "left",
        "button": false
    },
    "notification_panel": {
        "dock": "left"
    },
    "chat_panel": {
        "dock": "left",
        "button": false
    },
    // NOTE: Zen Mode, refer https://github.com/zed-industries/zed/issues/4382 when it's resolved
    "centered_layout": {
        "left_padding": 0.15,
        "right_padding": 0.15
    },
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": true
    },
    // Visual Elements
    "gutter": {
        "line_numbers": true,
        "code_actions": true,
        "folds": false
    },
    "scrollbar": {
        "show": "never"
    },
    "terminal": {
        "font_family": "Hack Nerd Font Mono"
    },
    // "remove_trailing_whitespace_on_save": true,
    // "buffer_line_height": {
    //   "custom": 1.3
    // }
    "tabs": {
        "file_icons": true,
        "git_status": true
    },
    // Relative Line Numbers
    "relative_line_numbers": false,
    // Tab Bar
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false
    },
    // Indentation, Rainbow Indentation
    "indent_guides": {
        "enabled": false
        // "coloring": "indent_aware"
    }
}
